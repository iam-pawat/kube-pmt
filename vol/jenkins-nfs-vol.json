{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "jenkins-pv",
    "namespace": "payment-cicd"
  },
  "spec": {
    "storageClassName": "jenkins-pv",
    "accessModes": ["ReadWriteOnce"],
    "capacity": {
      "storage": "1Gi"
    },
    "persistentVolumeReclaimPolicy": "Retain",
    "hostPath": {
      "path": "/data/webdata/k8sdockershared/"
    }
  }
}
